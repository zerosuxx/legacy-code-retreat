{
    "require-dev": {
        "phpunit/phpunit": "^7.3",
        "php-coveralls/php-coveralls": "^2.1"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        },
        "files": [
            "Game.php",
            "GameRunner.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Test\\": "test/Unit/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit --testdox --coverage-html coverage --coverage-clover clover.xml"
    }
}
